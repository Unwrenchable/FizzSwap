# Relayer configuration
RELAYER_PORT=4001
RELAYER_API_KEY=change-me-to-a-strong-secret
RELAYER_RATE_LIMIT=60

# EVM relayer signer (use secure secret storage in production)
RELAYER_PRIVATE_KEY=
FIZZDEX_ADDRESS=
EVM_RPC=

# Solana relayer keypair (JSON array of 64 bytes). Use a secrets manager in production.
RELAYER_SOLANA_KEYPAIR=
SOLANA_PROGRAM_ID=
SOLANA_RPC=

# Controls whether the relayer auto-completes mapped Solana HTLCs when it observes EVM completion
RELAYER_ALLOW_AUTOCOMPLETE=false
