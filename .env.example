# Example environment variables for running the relayer

# Relayer HTTP port
RELAYER_PORT=4001

# EVM RPC endpoint the relayer should listen to (for local dev use Ganache)
EVM_RPC=http://node:8545

# Address of deployed FizzDex contract (EVM)
FIZZDEX_ADDRESS=

# Optional: private key used by relayer to submit secrets to EVM (DO NOT CHECK IN)
# RELAYER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Optional: Solana keypair for relayer auto-complete (JSON array of secret key bytes)
# RELAYER_SOLANA_KEYPAIR=[1,2,3,...]

# Optional: API key to protect mapping endpoints
# RELAYER_API_KEY=some_random_token

# Optional: AES key to encrypt persisted relayer mappings (32-byte or passphrase)
# RELAYER_MAPPINGS_KEY=super_secret_mapping_key

# Whether the relayer should auto-complete mapped Solana HTLCs when EVM swap completes
# RELAYER_ALLOW_AUTOCOMPLETE=false
# Relayer configuration
RELAYER_PORT=4001
RELAYER_API_KEY=change-me-to-a-strong-secret
RELAYER_RATE_LIMIT=60

# EVM relayer signer (use secure secret storage in production)
RELAYER_PRIVATE_KEY=
FIZZDEX_ADDRESS=
EVM_RPC=

# Solana relayer keypair (JSON array of 64 bytes). Use a secrets manager in production.
RELAYER_SOLANA_KEYPAIR=
SOLANA_PROGRAM_ID=
SOLANA_RPC=

# Controls whether the relayer auto-completes mapped Solana HTLCs when it observes EVM completion
RELAYER_ALLOW_AUTOCOMPLETE=false
